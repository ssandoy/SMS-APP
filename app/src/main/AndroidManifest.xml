<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ssandoy.s236305_mappe2">

    <uses-permission android:name="com.example.ssandoy.s236305_mappe2.contentprovider.permission" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission android:name="com.example.ssandoy.s236305_mappe2.contentprovider.permission" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- TODO: SKRIV OM DETTE I DOKUMENTASJON! Se ned i receiver ogsÃ¥ ! -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegActivity" />
        <activity android:name=".ContactsActivity" />
        <activity android:name=".ChangeActivity" />
        <activity android:name=".MessageActivity" />

        <service
            android:name=".SendMessageService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".SendMessagePeriodicService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".PersonContentProvider"
            android:authorities="com.example.ssandoy.s236305_mappe2.contentprovider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.example.ssandoy.s236305_mappe2.permission"
            android:writePermission="com.example.ssandoy.s236305_mappe2.permission"></provider>

        <activity android:name=".LanguageActivity"></activity>
    </application>

</manifest>