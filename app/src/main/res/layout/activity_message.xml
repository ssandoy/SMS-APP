<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ssandoy.s236305_mappe2.MessageActivity"
    android:background="#19485E">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:id="@+id/confirmButton"
        android:textColor="#42C0FB"
        android:background="@null"
        android:textSize="20dp"
        android:layout_below="@+id/OnOffCheckBox"
        android:layout_alignStart="@+id/timeLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ret"
        android:id="@+id/returnButton"
        android:background="@null"
        android:textColor="#42C0FB"
        android:textSize="20dp"
        android:layout_below="@+id/OnOffCheckBox"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/messageText"
        android:layout_weight="0.14"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/returnButton"
        android:layout_below="@+id/messageLabel"
        android:textColor="#42C0FB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/messageLabel"
        android:id="@+id/messageLabel"
        android:textSize="20dp"
        android:textColor="#42C0FB"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timeLabel"
        android:id="@+id/timeLabel"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/messageText"
        android:textColor="#42C0FB" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBoxText"
        android:id="@+id/OnOffCheckBox"
        android:textColor="#42C0FB"
        android:textSize="20dp"
        android:layout_below="@+id/messageText"
        android:layout_alignStart="@+id/timePicker"
        android:layout_marginBottom="20dp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_marginLeft="75dp"
        android:layout_below="@+id/timeLabel"
        android:layout_alignStart="@+id/timePicker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setTime"
        android:id="@+id/button"
        android:textColor="#42C0FB"
        android:background="@null"
        android:textSize="20dp"
        android:layout_below="@+id/returnButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
